{
  "name": "@linear/sdk",
  "version": "1.0.0",
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "scripts": {
    "test": "npx jest -w 4",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test -u",
    "test:ci": "npx jest -w 1",
    "tsc": "npx tsc --noEmit",
    "build": "yarn build:generate && yarn build:clean && npx tsc",
    "build:clean": "npx rimraf dist",
    "build:generate": "yarn build:generate:clean && npx graphql-codegen --config codegen.yml",
    "build:generate:watch": "yarn build:generate --watch",
    "build:generate:clean": "npx rimraf src/_generated"
  },
  "dependencies": {
    "graphql": "15.4.0",
    "graphql-request": "3.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.tests.ts?(x)"
    ],
    "transform": {
      "^.*\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
