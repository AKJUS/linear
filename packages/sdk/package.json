{
  "name": "@linear/sdk",
  "version": "1.0.0",
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": "13.x",
    "yarn": "1.x"
  },
  "scripts": {
    "test": "npx jest -w 4",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test -u",
    "test:ci": "npx jest -w 1",
    "tsc": "npx tsc --noEmit",
    "build": "yarn build:clean && npx tsc",
    "build:clean": "npx rimraf dist",
    "generate": "yarn generate:clean && npx graphql-codegen --config codegen.yml",
    "generate:clean": "npx rimraf src/_generated"
  },
  "dependencies": {
    "@graphql-codegen/cli": "1.19.0",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "auto-bind": "4.0.0",
    "express": "^4.17.1",
    "graphql": "15.4.0",
    "graphql-request": "^3.3.0",
    "graphql-tools": "^7.0.1",
    "jest-fetch-mock": "^3.0.3",
    "json-graphql-server": "^2.1.3",
    "typescript": "4.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.tests.ts?(x)"
    ],
    "transform": {
      "^.*\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
