{
  "name": "linear",
  "private": true,
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "run-s dev:plugin:client dev:import",
    "dev:plugin:client": "run-s dev:common dev:plugin dev:client",
    "dev:doc:client": "run-s dev:common dev:plugin:doc dev:client",
    "dev:api:client": "run-s dev:common dev:plugin:api dev:client",
    "dev:common": "lerna run dev:common",
    "dev:plugin": "lerna run dev:plugin",
    "dev:plugin:doc": "lerna run dev:plugin:doc && lerna run generate:doc",
    "dev:plugin:api": "lerna run dev:plugin:sdk && lerna run generate:api",
    "dev:client": "lerna run dev:client",
    "dev:import": "lerna run dev:import",
    "build": "run-s schema build:common build:plugin build:client build:import",
    "build:common": "lerna run build:common",
    "build:plugin": "lerna run build:plugin",
    "build:client": "lerna run build:client",
    "build:import": "lerna run build:import",
    "schema": "lerna run schema",
    "test": "npx jest -w 4",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test -u",
    "test:ci": "npx jest -w 1",
    "lint": "npx eslint --max-warnings 0 --ext .ts,.tsx **/src/*",
    "prettier": "npx prettier --write **/*.{json,ts,js}"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.1",
    "@octokit/core": "3.2.1",
    "@types/express": "4.17.8",
    "@types/inquirer": "7.3.1",
    "@types/lodash": "4.14.165",
    "@types/node-fetch": "2.5.7",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.8.0",
    "@typescript-eslint/parser": "4.8.0",
    "auto-bind": "4.0.0",
    "body-parser": "1.19.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.8",
    "eslint-plugin-no-null": "1.0.2",
    "express": "4.17.1",
    "get-port": "5.1.1",
    "graphql": "15.4.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5"
  },
  "resolutions": {
    "typescript": "4.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,yaml}": [
      "npx prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "npx eslint --max-warnings 0 --fix -c .eslintrc.precommit.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.test.ts?(x)"
    ],
    "transform": {
      "^.*\\.tsx?$": "ts-jest"
    },
    "testTimeout": 20000,
    "globals": {
      "ts-jest": {
        "tsconfig": "config/tsconfig.json"
      }
    }
  }
}
