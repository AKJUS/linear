{
  "name": "linear",
  "private": true,
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:client": "lerna run build:client",
    "build:common": "lerna run build:common",
    "build:doc": "lerna run build:doc && lerna run generate:doc",
    "build:import": "lerna run build:import",
    "build:sdk": "lerna run build:sdk && lerna run generate:sdk",
    "build:test": "lerna run build:test && lerna run generate:test",
    "build": "run-s generate:schema generate:clean build:common build:doc build:sdk build:test build:client build:import",
    "dev:client": "NODE_ENV=development yarn build:client",
    "dev:common": "NODE_ENV=development yarn build:common",
    "dev:doc": "NODE_ENV=development yarn build:doc",
    "dev:import": "NODE_ENV=development yarn build:import",
    "dev:sdk": "NODE_ENV=development yarn build:sdk",
    "dev:test": "NODE_ENV=development yarn build:test",
    "dev": "NODE_ENV=development yarn build",
    "generate:clean": "lerna run generate:clean",
    "generate:schema": "lerna run schema",
    "lint": "npx eslint --max-warnings 0 --ext .ts,.tsx **/src/*",
    "mock": "npx graphql-faker packages/client/src/schema.graphql",
    "prettier": "npx prettier --write **/*.{json,ts,js}",
    "test:ci": "npx jest -w 1",
    "test:e2e": "E2E=true yarn test _gen.test",
    "test:update": "yarn test -u",
    "test:watch": "yarn test --watch",
    "test": "npx jest -w 4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.1",
    "@octokit/core": "^3.2.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/express": "^4.17.8",
    "@types/inquirer": "^7.3.1",
    "@types/lodash": "^4.14.165",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "auto-bind": "^4.0.0",
    "body-parser": "^1.19.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-no-null": "^1.0.2",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "graphql": "^15.4.0",
    "graphql-faker": "^2.0.0-rc.23",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,yaml}": [
      "npx prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "npx eslint --max-warnings 0 --fix -c .eslintrc.precommit.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.test.ts?(x)"
    ],
    "transform": {
      "^.*\\.tsx?$": "ts-jest"
    },
    "testTimeout": 20000,
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
