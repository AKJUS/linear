{
  "name": "linear",
  "private": true,
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "NODE_ENV=development yarn build",
    "dev:watch": "NODE_ENV=development yarn build:watch",
    "test": "npx jest -w 4",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test -u",
    "test:ci": "npx jest -w 1",
    "lint": "npx eslint --max-warnings 0 --ext .ts,.tsx **/src/*",
    "tsc": "lerna run tsc",
    "build": "lerna run build:plugin && lerna run build",
    "build:watch": "yarn build:plugin:watch && yarn build:generate:watch",
    "build:plugin": "lerna run build:plugin",
    "build:plugin:watch": "lerna run build:plugin:watch",
    "build:generate": "lerna run build:generate",
    "build:generate:watch": "lerna run build:generate:watch",
    "prettier": "npx prettier --write **/*.{json,ts,js}"
  },
  "dependencies": {
    "@linear/sdk": "file:packages/sdk",
    "@linear/sdk-plugin": "file:packages/sdk-plugin"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.1",
    "@octokit/core": "3.2.1",
    "@types/express": "4.17.8",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.8.0",
    "@typescript-eslint/parser": "4.8.0",
    "auto-bind": "4.0.0",
    "body-parser": "1.19.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.8",
    "eslint-plugin-no-null": "1.0.2",
    "express": "4.17.1",
    "get-port": "5.1.1",
    "graphql": "15.4.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5"
  },
  "resolutions": {
    "typescript": "4.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,yaml}": [
      "npx prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "npx eslint --max-warnings 0 --fix -c .eslintrc.precommit.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/*.tests.ts?(x)"
    ],
    "transform": {
      "^.*\\.tsx?$": "ts-jest"
    },
    "testTimeout": 20000,
    "globals": {
      "ts-jest": {
        "tsconfig": "config/tsconfig.json"
      }
    }
  }
}
