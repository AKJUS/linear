{
  "name": "linear",
  "private": true,
  "author": "Linear Orbit, Inc",
  "license": "MIT",
  "engines": {
    "node": "13.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --parallel",
    "test:update": "lerna run test:update --parallel",
    "test:ci": "lerna run test:ci",
    "lint": "npx eslint --max-warnings 0 --ext .ts,.tsx **/src/*",
    "tsc": "lerna run tsc --parallel",
    "build": "yarn generate && lerna run build",
    "generate": "lerna run build-plugin && lerna run generate --parallel && yarn prettier",
    "prettier": "npx prettier --write **/*.{json,ts,js}"
  },
  "dependencies": {
    "@linear/sdk": "file:packages/sdk",
    "@linear/sdk-plugin": "file:packages/sdk-plugin",
    "@types/jest": "26.0.15"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-no-null": "1.0.2",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.3"
  },
  "resolutions": {
    "typescript": "4.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,yaml}": [
      "npx prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "npx eslint --max-warnings 0 --fix -c .eslintrc.precommit.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && npx lint-staged"
    }
  }
}
